{
  "name": "saasquatch-docs",
  "description": "Referral SaaSquatch public documentation",
  "version": "0.0.1",
  "license": "APACHE",
  "repository": {
    "type": "git",
    "url": "http://github.com/saasquatch/saasquatch-docs.git"
  },
  "engines": {
    "node": "6.4.0"
  },
  "scripts": {
    "linkunicode": "cd ./hacks/node-unicodetable && yarn install && yarn link --force && cd ../../ && yarn link unicode",
    "buildprod": "yarn run linkunicode && gulp production && yarn run build:js",
    "production": "yarn run linkunicode && gulp production && yarn run build:js",
    "local": "yarn run browser_sync & NODE_ENV=development nodemon --exec 'yarn run build:dev && yarn run browser_sync_reload'",
    "server": "babel-node ./scripts/previewServer.js",
    "build:dev": "gulp & gulp metalsmithDev & yarn run build:js & wait",
    "build:js": "webpack && yarn run build:uglifyjs",
    "build:uglifyjs": "uglifyjs --output ./build/assets/js/bundle.min.js ./build/assets/js/bundle.js ",
    "browser_sync": "browser-sync start --server build --port $PORT --host $IP",
    "browser_sync_reload": "browser-sync reload --port $PORT --host $IP",
    "gulp": "gulp",
    "webpack": "webpack",
    "heroku-postbuild": "yarn run production",
    "deploy:production": "yarn run deploy:firebase",
    "deploy:firebase": "firebase use default --token \"$FIREBASETOKEN\" && firebase deploy --token \"$FIREBASETOKEN\" --debug",
    "test": "./node_modules/.bin/mocha --reporter spec --compilers js:babel-register",
    "test:watch": "./node_modules/.bin/mocha --reporter spec --compilers js:babel-register --watch"
  },
  "cacheDirectories": [
    "node_modules",
    "build"
  ],
  "dependencies": {
    "anchor-js": "^3.2.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.13.0",
    "chai": "^3.5.0",
    "cheerio": "^0.22.0",
    "connect": "^3.4.1",
    "contentful": "^3.5.0",
    "debug": "^2.2.0",
    "del": "^2.2.1",
    "express": "^4.14.0",
    "extend": "^3.0.0",
    "firebase-tools": "^3.6.1",
    "get-folder-size": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-changed": "^1.3.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-if": "^2.0.1",
    "gulp-imagemin": "^3.0.2",
    "gulp-less": "^3.1.0",
    "gulp-less-changed": "^1.2.0",
    "gulp-notify": "^2.2.0",
    "gulp-sequence": "^0.4.5",
    "gulp-sizereport": "^1.1.3",
    "gulp-sourcemaps": "^1.6.0",
    "hammerjs": "^2.0.8",
    "handlebars": "^4.0.5",
    "highlight.js": "^9.5.0",
    "jquery": "^3.1.0",
    "jquery-jsonview": "^1.2.3",
    "jquery.mmenu": "^5.6.5",
    "js-yaml": "^3.0.2",
    "json-schema-resolve-allof": "^1.1.4",
    "less": "^2.7.1",
    "lodash": "^4.13.1",
    "magnific-popup": "^1.1.0",
    "markdown-toc": "^0.13.0",
    "marked": "^0.3.5",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-define": "^2.0.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metadata": "0.0.4",
    "metalsmith-templates": "^0.7.0",
