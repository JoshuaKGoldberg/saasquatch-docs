    "performance-now": "^0.2.0",
    "promise": "^7.1.1",
    "request-promise": "^4.1.1",
    "slug": "0.9.1",
    "superstatic": "^4.0.3",
    "swagger-client": "^2.1.15",
    "swagger-parser": "^3.4.1",
    "swig": "1.4.2",
    "swig-extras": "0.0.1",
